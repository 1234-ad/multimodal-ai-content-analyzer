# Multi-Modal AI Content Analyzer Configuration
# Copy this file to .env and update with your values

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=1

# API Keys (Required for full functionality)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here
STABILITY_API_KEY=your_stability_ai_key_here
REPLICATE_API_TOKEN=your_replicate_token_here

# Model Settings
DEFAULT_VISION_MODEL=clip-vit-large-patch14
DEFAULT_LLM_MODEL=gpt2-medium
DEFAULT_IMAGE_GEN_MODEL=stable-diffusion-v1-5

# Processing Settings
BATCH_SIZE=32
MAX_WORKERS=4
MAX_IMAGE_SIZE=2048
MAX_TEXT_LENGTH=10000

# Database Settings
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=multimodal_ai
CACHE_TTL=3600

# Storage Settings
STORAGE_TYPE=local
STORAGE_PATH=./storage
STORAGE_BUCKET=your-bucket-name

# AWS Settings (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Google Cloud Settings (if using GCS)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Model Optimization Settings
USE_MIXED_PRECISION=true
USE_TORCH_COMPILE=false
ENABLE_XFORMERS=true

# Generation Settings
DEFAULT_MAX_TOKENS=500
DEFAULT_TEMPERATURE=0.7
DEFAULT_TOP_P=0.9

# Image Generation Settings
DEFAULT_IMAGE_WIDTH=512
DEFAULT_IMAGE_HEIGHT=512
DEFAULT_INFERENCE_STEPS=20
DEFAULT_GUIDANCE_SCALE=7.5

# WebSocket Settings
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30

# Feature Flags
ENABLE_IMAGE_GENERATION=true
ENABLE_TEXT_GENERATION=true
ENABLE_MULTIMODAL_ANALYSIS=true
ENABLE_REAL_TIME_PROCESSING=true

# Model Paths
MODEL_CACHE_DIR=./models
CUSTOM_MODELS_DIR=./custom_models

# Content Moderation
ENABLE_CONTENT_MODERATION=true
MODERATION_THRESHOLD=0.8

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300

# Development Settings
RELOAD_ON_CHANGE=false
ENABLE_PROFILING=false